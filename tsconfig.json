{
  "include": ["./src"],
  "compilerOptions": {
    "outDir": "./dist",
    "target": "ES2015",
    "module": "UMD",
    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "removeComments": true,
    "moduleResolution": "Node"
  }
}
